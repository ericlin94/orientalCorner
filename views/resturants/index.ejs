<% include ../partials/header%>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To orientalCorner!</h1>
            <p>View our hand-picked resturants from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/resturants/new">Add New Resturants</a>
            </p>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Resturants!</h3>
        </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <%resturants.forEach(function(resturant){%>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%=resturant.image%>"></img>
                <div class="caption">
                    <h4><%=resturant.name%></h4>
                </div>
                <p>
                    <a href="/resturants/<%=resturant._id%>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
        <%});%>
    </div>
    
</div>
<%include ../partials/footer%>